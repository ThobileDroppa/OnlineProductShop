<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".CheckoutPageView">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/img_checkout_product"
            android:src="@drawable/shop_logo_remove"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@drawable/product_details_border"
            android:paddingLeft="2dp"
            android:paddingRight="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingLeft="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_product_title"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="24sp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Stock:  "
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_gravity="end"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stock_view_checkout_quantity"
                    android:text="Quantity"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_gravity="end"
                    android:textSize="15sp"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingLeft="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_description_view"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="20sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingRight="20dp">
                
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="R"
                    android:textColor="@color/black"
                    android:textSize="23sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/view_product_price"
                    android:textColor="@color/black"
                    android:text=" Price"
                    android:textSize="23sp" />

            </LinearLayout>
        
    </LinearLayout>
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/decrease_btn"
                android:src="@drawable/left_key"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="1"
                android:id="@+id/qty_checkout_view"
                android:gravity="center"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Qty"
                android:gravity="center"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/increase_btn"
                android:layout_height="match_parent"
                android:src="@drawable/right_key" />

        </LinearLayout>


    </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_gravity="end">

        <LinearLayout
            android:layout_width="193dp"
            android:background="@color/red"
            android:layout_gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="55dp"
                android:id="@+id/removeBtn"
                android:src="@drawable/trash_bin_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="197dp"
            android:background="@color/two_blue"
            android:gravity="center"
            android:id="@+id/continue_to_payment"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Continue"
                android:gravity="center"
                android:textSize="35sp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>
    

</LinearLayout>