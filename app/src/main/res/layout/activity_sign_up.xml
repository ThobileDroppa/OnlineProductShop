<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/three_blue"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="140dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="35sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_marginBottom="40dp">

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/name_create_text"
            android:padding="5dp"
            android:drawableStart="@drawable/profile_icon"
            android:lines="1"
            android:background="@drawable/signup_text_box"
            android:hint="    Name"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/baseline_email_24"
            android:padding="5dp"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:id="@+id/email_create_text"
            android:background="@drawable/signup_text_box"
            android:hint="    Email"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/baseline_vpn_key_24"
            android:id="@+id/password_create_text"
            android:padding="5dp"
            android:inputType="textPassword"
            android:background="@drawable/signup_text_box"
            android:hint="    Password"/>
    </LinearLayout>

    <Button
        android:id="@+id/create_user_btn"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/red"
        android:text="CREATE" />

</LinearLayout>