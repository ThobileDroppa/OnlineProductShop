<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".AdminPage">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Administrator"
        app:subtitleTextColor="@color/white"
        app:titleTextColor="@color/white"
        android:backgroundTint="@color/two_blue"
        android:paddingEnd="25dp"
        android:elevation="20dp"
        app:menu="@menu/home_menu"
        android:background="@color/two_blue"
        >


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="25dp"
        android:id="@+id/add_admin_product_btn"
        android:elevation="35dp"
        android:orientation="vertical"
        android:background="@drawable/administrator_button_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD PRODUCT"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textSize="29sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="25dp"
        android:id="@+id/view_admin_product_btn"
        android:elevation="35dp"
        android:orientation="vertical"
        android:background="@drawable/administrator_button_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIEW PRODUCT"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textSize="29sp"/>

    </LinearLayout>

</LinearLayout>